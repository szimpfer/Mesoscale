# Radiosonde - Configuration
# Copy to .env and fill in your values

# TEMPEST WEATHER STATION
# Get token from: https://tempestwx.com/settings/tokens
TEMPEST_TOKEN=your_token_here
TEMPEST_STATION_ID=36763

# LOCATION (Buffalo, NY defaults)
# Find your coordinates and NWS office at: https://www.weather.gov
NWS_LAT=42.9054
NWS_LON=-78.6923
NWS_OFFICE=BUF
LOCATION_NAME=Buffalo, NY

# CLAUDE AI
# Get API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api-your-key-here

# GMAIL SMTP
# Use App Password, NOT your regular password
# Setup: https://support.google.com/accounts/answer/185833
SMTP_USER=your-email@gmail.com
SMTP_PASS=xxxx-xxxx-xxxx-xxxx
EMAIL_TO=recipient@example.com

# SCHEDULE (for Docker)
TZ=America/New_York
CRON_SCHEDULE=0 7 * * *
